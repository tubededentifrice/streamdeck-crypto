{
  "name": "streamdeck-crypto",
  "version": "2.1.0",
  "description": "StreamDeck Crypto ticker plugin",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "concurrently -k --names \"tsc,bundle\" \"tsc -p tsconfig.json --watch --preserveWatchOutput\" \"node esbuild.config.mjs --watch\"",
    "bundle": "node esbuild.config.mjs --mode=production",
    "bundle:watch": "node esbuild.config.mjs --watch",
    "test": "jest",
    "preview": "concurrently -k --names \"tsc,preview\" \"npm:build:watch\" \"npm:preview:serve\"",
    "preview:serve": "node preview-server.js",
    "watch": "concurrently -k --names \"tsc,streamdeck\" \"npm:build:watch\" \"nodemon --watch com.courcelle.cryptoticker-dev.sdPlugin --exec \\\"streamdeck restart com.courcelle.cryptoticker-dev\\\"\"",
    "pretest": "npm run build",
    "lint": "eslint \"com.courcelle.cryptoticker-dev.sdPlugin/**/*.ts\" \"__tests__/**/*.{js,ts}\" preview-server.js",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,js,json,css,html}\"",
    "prepare": "husky install",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "**/*.{json,css,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "expr-eval": "^2.0.2",
    "jsdom": "^27.0.0",
    "sharp": "^0.34.4"
  }
}
