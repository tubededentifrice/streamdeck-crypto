{
  "name": "streamdeck-crypto",
  "version": "1.0.0",
  "description": "StreamDeck Crypto ticker plugin",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.0",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "test": "jest",
    "preview": "node preview-server.js",
    "watch": "nodemon --watch com.courcelle.cryptoticker-dev.sdPlugin --exec \"streamdeck restart com.courcelle.cryptoticker-dev\"",
    "lint": "eslint \"com.courcelle.cryptoticker-dev.sdPlugin/**/*.js\" \"__tests__/**/*.js\" preview-server.js",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,json,css,html}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "**/*.{json,css,html}": [
      "prettier --write"
    ]
  }
}
